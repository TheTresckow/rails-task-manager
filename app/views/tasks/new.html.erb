<div class="container">
<h1>Create a new Task</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :Title %>
  <%= f.text_field :title %>
  <%= f.label :Details %>
  <%= f.text_field :details%>
  <%= f.submit  class: "btn btn-success"%>
<% end %>
<p><%= link_to "Back to your Tasks", tasks_path, class: "btn btn-primary" %>
</div>
